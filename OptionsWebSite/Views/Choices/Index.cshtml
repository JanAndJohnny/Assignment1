<script>


    var drawChart = function(thingsArray, divForThings, titleForCharts){
       

            $(divForThings).highcharts({
                chart: {
                    plotBackgroundColor: null,
                    plotBorderWidth: null,
                    plotShadow: false,
                    type: 'pie'
                },
                title: {
                    text: titleForCharts
                },
                tooltip: {
                    enabled: false
                },
                plotOptions: {
                    pie: {
                        allowPointSelect: false,
                        cursor: 'pointer',
                        dataLabels: {
                            enabled: true,
                            format: '<b>{point.name}</b>: {point.percentage:.1f} %',
                            style: {
                                color: (Highcharts.theme && Highcharts.theme.contrastTextColor) || 'black'
                            }
                        }
                    }
                },
                series: [{
                    name: 'Choices',
                    colorByPoint: true,
                    data: [{
                        name: 'Data Communication',
                        y:thingsArray[0]
                    }, {
                        name: 'Client Server',
                        y: thingsArray[1],
                        
                    }, {
                        name: 'Digital Processing',
                        y: thingsArray[2]
                    }, {
                        name: 'Information Systems',
                        y: thingsArray[3]
                    }, {
                        name: 'Database',
                        y: thingsArray[4]
                    }, {
                        name: 'Web & Mobile',
                        y: thingsArray[5]
                    }, {
                        name: 'Tech  Pro',
                        y: thingsArray[6]
                    }]
                }]
            });
}

</script>


